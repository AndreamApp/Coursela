<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="toolBarColor">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="tableItemBgPressed">@color/colorPrimaryDark</item>
        <item name="tableItemBg">@color/colorPrimary</item>

        <item name="titleTextColor">#c0f8f8f8</item>
        <item name="foreTextColor">#c0f8f8f8</item>
        <item name="hintTextColor">#c0c0c0c0</item>

        <item name="android:windowBackground">@drawable/window_bg</item>
        <!--<item name="android:windowIsTranslucent">false</item>-->
        <!--<item name="android:windowShowWallpaper">true</item>-->
    </style>

    <style name="TableHeaderTextView">

        <item name="android:textColor">#333333</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1.0</item>

    </style>

    <style name="TableColumnLinearLayout">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">2dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1.0</item>

    </style>

</resources>
